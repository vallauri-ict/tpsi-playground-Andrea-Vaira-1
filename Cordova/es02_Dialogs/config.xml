<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.vallauri.dialogs" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>dialogs</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <icon src="www/img/icona.png"/>

    <splash src="www/img/splash.png"/>
    <preference name="SplashShowOnlyFirstTime" value="true"/> //default
    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="750"/>

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
